<!--pages/login/login.wxml-->
<view class="loginContainer">
	<view class="wrapper">
		<view class="left-top-sign">
			LOGIN
		</view>
		<view class="welcome">欢迎回来</view>
		<view class="inputContainer">
			<view class="inputItem">
				<text class="tit">手机号</text>
				<input type="text" data-type="phone" id="phone" bindinput="handleInput" placeholder="请输入手机号" />
			</view>
			<view class="inputItem">
				<text class="tit">密码</text>
				<input type="password" data-type="password" id="password" bindinput="handleInput" placeholder="请输入密码" />
			</view>
		</view>
		<button class="confirm-btn" bindtap="handleLogin">登录</button>
		<view class="forget-section">忘记密码?</view>
	</view>
	<view class="register-section">
		还没有账号?
		<text>马上注册</text>
	</view>
</view>