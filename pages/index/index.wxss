/* pages/index/index.wxss */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}
/* nav区域样式 */
.navContainer {
  display: flex;
  
}
.nav-item {
  display: flex;
  flex:20%;
  flex-direction: column;
  align-items: center;
}
.nav-item .iconfont {
  width: 100rpx;
  height: 100rpx;
  background: rgb(240, 19, 19);
  color: #fff;
  font-size: 50rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  margin: 20rpx 0;
}
.nav-item text {
  font-size: 26rpx;
}

/* 推荐 头部区域 */
.recommendContainer {
  padding: 20rpx;
}

/* 推荐 内容区 */
.recommend-scroll {
  display: flex;
  height: 300rpx;
}
.scroll-item{
  width: 200rpx;
  margin-right: 20rpx;

}
.scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scroll-item text {
  
  font-size: 26rpx;
  /* 单行文本溢出隐藏 省略号代替 */
/*   white-space: nowrap;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出隐藏,省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /* 设置对齐模式 */
  -webkit-line-clamp: 2; /* 设置文本行数 */
}
.topListSwiper {
  height: 400rpx;
}
.topList {
  padding: 20rpx;
}
.swiperItem {
  width: 95%;
  background: #fbfbfb;
}
.swiperItem .title {
  line-height: 80rpx;
}
.topItem {
  display: flex;
  width: 100%;
  height: 100rpx;
  margin-bottom: 20rpx;
}
.topItem image {
  height: 100rpx;
  width: 100rpx;
  border-radius: 10rpx;
}
.topItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.topItem .musicName {
  line-height: 100rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
