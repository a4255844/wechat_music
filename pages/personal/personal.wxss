/* pages/personal/personal.wxss */
.personalContainer {
  width: 100%;
  height: 100%;
}
.user-section {
  position: relative;
  height: 520rpx;
  padding: 100rpx 30rpx 0
}
.bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: .7;
  filter: blur(1px);
}
.user-info-box {
  position: relative;
  height: 180rpx;
  display: flex;
  align-items: center;
}

.portrait-box .portrait {
  width: 130rpx;
  height: 130rpx;
  border: 5px solid #fff;
  border-radius: 50%;
}
 .info {
  margin-left: 20rpx;
  color : #303133;
  
}
.vip-cart-box {
  position: relative;
  height: 240rpx;
  background: rgba(0,0,0,.7);
  border-radius: 16rpx;
  color: #f7d680;
  padding: 20rpx 24rpx;
}
.b-btn {
  position: absolute;
  width: 132rpx;
  height: 40rpx;
  border-radius: 20rpx;
  background: #f9e6af;
  color: #36343c;
  font-size: 22rpx;
  top: 16rpx;
  right: 20rpx;
  text-align: center;
  line-height: 40rpx;
}
.vipImg {
  position: absolute;
  top: 20rpx;
  right: 0;
  width: 380rpx;
  height: 260rpx;
}
.v-title {
  font-size: 22rpx;
  margin-bottom: 33rpx;
}
.v-m {
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
.v-b{
  font-size: 24rpx;
}

/* 功能区域样式 */
.coverContainer {
  margin-top: -150rpx;
  padding: 0 30rpx 20rpx;
  position: relative;
  background: #f5f5f5;
}
.coverContainer .arc {
  width: 100%;
  height: 36rpx;
  position: absolute;
  left: 0;
  top: -34rpx;
}
.nav-section {
  display: flex;
  padding: 20rpx 0;
  border-radius: 15rpx;
  background: #fff;
}
.nav-section .nav-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}
.nav-section .nav-item text {
  font-size: 22rpx;
}
.nav-section .nav-item .iconfont {
  font-size: 60rpx;
  line-height: 80rox;
  color: #d43c33;
}

/* 功能页面下部样式 */
.personalContent {
  background: #fff;
  margin-top: 20rpx;
  padding-left: 20rpx;
}
.recentPlayContainer {
  color:  #333;
}
.recentPlayContainer .title {
  display: block;
  line-height: 80rpx;
  font-size: 26rpx;
}
/* 最近播放列 */
.scroll-PlayRecord {
  height: 200rpx;
  display: flex;
}

.PlayRecordItem image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.recentPlayContainer text {
  font-size: 30rpx;
}
.cardList {
  margin-top: 20rpx;
}
.cardItem {
  display: flex;
  border-top: 1rpx solid #eee;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 28rpx;
  color: #333;
  justify-content: space-between;
}