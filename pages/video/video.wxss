/* pages/video/video.wxss */
/* 头部搜索区域 */

.header-search{
  display: flex;
  height: 80rpx;
  align-items: center;
  padding: 10rpx;
}
.header-search image {
  width: 60rpx;
  height: 60rpx;
}
.header-search .searchBox {
  flex: 1;
  border: 1rpx solid #eee;
  margin: 0 20rpx;
  font-size: 26rpx;
  line-height: 80rpx;
  text-align: center;
  color: #d43c33;
}

/*nav导航栏区域  */
.scroll-nav{
  display: flex;
  white-space: nowrap;
  height: 60rpx;
  margin: 0 20rpx;
  overflow: hidden;

}
.scroll-nav .scrollItem {
  margin: 0 20rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.scrollItem .navContent {
  box-sizing: border-box;
  height: 60rpx;
}
.scrollItem .active {
  border-bottom: 1rpx solid #d43c33;
}

/* 视频列表样式 */
.videoScroll {
  margin-top: 10rpx;
  height: calc(100vh - 170rpx);
}
.videoItem {
  padding: 0 3%;
}
.videoItem  .common{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem .content {
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.videoItem .footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.videoItem .footer .avater {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.videoItem .footer .nickName {
  font-size: 26rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}
.comments_praised {
  float: right;
  vertical-align: middle;
  padding-top: 12rpx;
  
}
.comments_praised .item {
  float: left;
  margin-left: 50rpx;
  position: relative;
}
.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
.comments_praised .btn {
   display: inline;
   padding: 0;
   width: 35rpx;
   height: 35rpx;
   background: #fff;
}
.comments_praised .item .iconfont {
  font-size: 32rpx;
}


