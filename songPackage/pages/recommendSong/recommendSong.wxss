
@import '/static/iconfont/iconfont.wxss';

/* 独立分包不与全局共享资源 */
/* 头部样式*/
.header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.header image {
  width: 100%;
  height: 100%;
}
.date {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  color: #fff;
}
.date .month {
  font-size: 38rpx;
}
/* 歌曲列表 */
.listContainer {
  position: relative;
  top: -20rpx;
  left: 0;  
  background: #fff;
  padding: 0 20rpx;
  border-radius: 28rpx 28rpx 0 0;
}
.list-header {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  justify-content: space-between;
}
/* 列表内容 */
.listScroll {
  width: 100%;
  height: calc(100vh - 380rpx);
}
.listScroll .scrollItem {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
}
.scrollItem .iconfont {
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}
.scrollItem .item-left {
  display: flex;
}
.scrollItem .item-left image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.item-left .musicInfo {
  display: flex;
  font-size: 24rpx;
  max-width: 500rpx;
  flex-direction: column;
  justify-content: space-between;
}
.item-left text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}